#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main(void){
  double s1, s2, s3;
  printf("Enter a score: ");
  scanf("%lg", &s1);
  printf("Enter a score: ");
  scanf("%lg", &s2);
  printf("Enter a score: ");
  scanf("%lg", &s3);

  if(s1 < s2 && s1 < s3){
    printf("%2.2f \n", ((s2+s3)/2));
  } else if(s2 < s3 && s2 < s1){
    printf("%2.2f \n", ((s1+s3)/2));
  } else{
    printf("%2.2f \n", ((s1+s2)/2));
  } 
  return 0;
}
